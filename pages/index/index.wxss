/**index.wxss**/
.userinfo {
  width:100%;
  background:#f00;
  top:0;
}
.login_but{
  background:rgba(0,0,0,0);
  color:#fff;
  text-align:right;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  vertical-align: middle;
  float:right;
}

.userinfo-nickname {
  display:inline-block;
  color: #fff;
  line-height:140rpx;
  float:right;
}

/* 立即抽奖 */
.lottery {
	width: 700rpx;
	height: 700rpx;
	position: relative;
	margin: 1rpx auto;
}
.lot text {
	position:absolute;
	top:50%;
	left:50%;
	z-index:99;
	font-size:38rpx;
	text-align: center;
	background:#fff;
}
.lottery_prize{
	width: 700rpx;
	height: 700rpx;
	position: relative;
}
.lottery_prize .lottery-unit{
	width:100rpx;
	height:100rpx;
	background:#fff;
  position:absolute;
}
.lottery_prize .lottery-unit image{
	width:100%;
	height:100%;
	position:absolute;
}
.lottery_prize .lottery-unit .lottery_pitch{
	width:100%;
	height:100%;
	position:absolute;
	border: #f00 solid 2rpx;
	z-index:999;
	display:none;
}
.lottery_prize .lottery-unit.active .lottery_pitch{
	display:block;
}

